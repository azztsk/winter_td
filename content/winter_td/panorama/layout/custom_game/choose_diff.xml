			</Button>
			<Button class="btn" onmouseover="AddStyle( hover )" onmouseout="RemoveStyle( hover )" onactivate="DiffCheck('hard')" >
				<Label id="label" text="HARD" />
				<Label id="subLabel" text="Player lives: 20, Enemy hp: 125%" />
			</Button>
			<Button class="btn" onmouseover="AddStyle( hover )" onmouseout="RemoveStyle( hover )" onactivate="DiffCheck('insane')" >
				<Label id="label" text="NIGHTMARE" />
				<Label id="subLabel" text="Player lives: 10, Enemy hp: 150%" />
			</Button>
